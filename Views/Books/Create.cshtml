@model Moment3.Models.Book
<h2>Lägg till bok</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Titel</label>
        <input asp-for="Title" class="form-control" required placeholder="Bokens titel" />
    </div>

    <div class="form-group">
        <label>Handling</label>
        <textarea asp-for="Description" class="form-control" required placeholder="Kortare beskrivning"></textarea>
    </div>

    <div class="form-group">
        <label>Författare</label>
        <input type="text" name="authors" class="form-control" placeholder="Författare 1, Författare 2, ..." required />
    </div>
    <br>

    <button type="submit" class="btn btn-success">Lägg till</button>
</form>